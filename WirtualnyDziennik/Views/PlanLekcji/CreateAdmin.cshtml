@model WirtualnyDziennik.Models.PlanLekcji

@{
    ViewBag.Title = "Create";
}

<h2>Modyfikuj Planlekcji</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Przedmiot, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Przedmiot.id, WirtualnyDziennik.Models.Przedmioty.ListaDostepnych, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Przedmiot, "", new { @class = "text-danger" })
            </div>
            @Html.HiddenFor(model => model.Klasa.id, new { @Value = ViewData["klasaid"] })
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
                <p>@ViewBag.Message</p>
            </div>
        </div>
        <div class="form-group">

        </div>


        <div class="form-group">

        </div>
    </div>
}


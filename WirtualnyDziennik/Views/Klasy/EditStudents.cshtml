@model WirtualnyDziennik.Models.Klasy

@{
    ViewBag.Title = "Create";
}

<h2>Creating new type</h2>

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.nazwa, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.nazwa)
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Imię")
            </th>
            <th>
                @Html.DisplayName("Nazwisko")
            </th>
            <th></th>
        </tr>

        @foreach (var item in WirtualnyDziennik.Models.Przedmioty.ListaDostepnychNauczycieli)
        {
        <tr>
            <td>
                @Html.DisplayName(item.Value)
            </td>
            <td>
                @Html.DisplayName(item.Text)
            </td>
            <td>
                <button onclick="location.href='@Url.Action("DeleteStudent", "KlasaUczen", new { id = item.Value })'" type="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Usuń </button>
            </td>
        </tr>
        }
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button onclick="location.href='@Url.Action("Add", "Klasy", new { id =ViewData["Klasa"] } )'" type="submit" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Dodaj ucznia </button>
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

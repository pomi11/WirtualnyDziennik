@model IEnumerable<WirtualnyDziennik.Models.Tresc>
<div class="container body-content">
    <p>
        <button onclick="location.href='@Url.Action("Create", "Tresc")'" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Utwórz Ogłoszenie</button>
    </p>

    <table class="body-content">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.tytul)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.tytul)
                </td>
                <td>
                    <button onclick="location.href='@Url.Action("Edit", "Tresc", new { id = item.id } )'" type="button" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit </button>
                    <!--<button onclick="location.href='//@Url.Action("Details", "Tresc", new { id = item.id })'" type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Details </button>-->
                    <button onclick="location.href='@Url.Action("Delete", "Tresc", new { id = item.id })'" type="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Delete </button>
                </td>
            </tr>
        }

    </table>
</div>
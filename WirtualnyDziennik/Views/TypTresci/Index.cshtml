@model IEnumerable<WirtualnyDziennik.Models.TypTresci>
@{
    Layout = null;
}

<p>
    <button onclick="location.href='@Url.Action("Create", "TypTresci")'" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nowy Typ</button>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NAZWA)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NAZWA)
            </td>
            <td>
                <button onclick="location.href='@Url.Action("Edit", "TypTresci", new { id = item.ID } )'" type="button" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit </button>
                <button onclick="location.href='@Url.Action("Details", "TypTresci", new { id = item.ID })'" type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-list" aria-hidden="true"></span> Details </button>
                <button onclick="location.href='@Url.Action("Delete", "TypTresci", new { id = item.ID })'" type="button" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Delete </button>
            </td>
        </tr>
    }

</table>
